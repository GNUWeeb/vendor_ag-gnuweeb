Subject: [PATCH 1/3] Android: redirect debug messages to logcat

---
 Android.bp |  1 +
 xf86drm.c  | 10 ++++++++++
 2 files changed, 11 insertions(+)

diff --git a/Android.bp b/Android.bp
index dbac5626..e844c4d4 100644
--- a/Android.bp
+++ b/Android.bp
@@ -103,6 +103,7 @@ cc_library {
         "-Wno-sign-compare",
         "-Wno-tautological-compare",
     ],
+    shared_libs: ["liblog"],
     apex_available: [
         "//apex_available:platform",
         "com.android.virt",
diff --git a/xf86drm.c b/xf86drm.c
index b49d42f7..a7fef783 100644
--- a/xf86drm.c
+++ b/xf86drm.c
@@ -79,6 +79,10 @@
 
 #include "util_math.h"
 
+#ifdef __ANDROID__
+#include <log/log.h>
+#endif
+
 #ifdef __DragonFly__
 #define DRM_MAJOR 145
 #endif
@@ -141,16 +145,22 @@ drm_public void drmSetServerInfo(drmServerInfoPtr info)
 static int DRM_PRINTFLIKE(1, 0)
 drmDebugPrint(const char *format, va_list ap)
 {
+#ifdef __ANDROID__
+    return __android_log_vprint(ANDROID_LOG_DEBUG, "libdrm", format, ap);
+#else
     return vfprintf(stderr, format, ap);
+#endif
 }
 
 drm_public void
 drmMsg(const char *format, ...)
 {
     va_list ap;
+#ifndef __ANDROID__
     const char *env;
     if (((env = getenv("LIBGL_DEBUG")) && strstr(env, "verbose")) ||
         (drm_server_info && drm_server_info->debug_print))
+#endif
     {
         va_start(ap, format);
         if (drm_server_info) {
